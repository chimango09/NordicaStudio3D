{
  "entities": {
    "Client": {
      "title": "Client",
      "type": "object",
      "description": "Represents a client who orders 3D printed products.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the client."
        },
        "email": {
          "type": "string",
          "description": "Email address of the client.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "Phone number of the client."
        },
        "address": {
          "type": "string",
          "description": "Address of the client."
        }
      },
      "required": [
        "name"
      ]
    },
    "Expense": {
      "title": "Expense",
      "type": "object",
      "description": "Represents an expense related to 3D printing, such as filament or accessories.",
      "properties": {
        "date": {
          "type": "string",
          "description": "Date of the expense.",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "Description of the expense."
        },
        "amount": {
          "type": "number",
          "description": "Amount of the expense."
        }
      },
      "required": [
        "date",
        "amount"
      ]
    },
    "Filament": {
      "title": "Filament",
      "type": "object",
      "description": "Represents a type of filament used for 3D printing.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the filament (e.g., PLA, ABS)."
        },
        "color": {
          "type": "string",
          "description": "Color of the filament."
        },
        "stockLevel": {
          "type": "number",
          "description": "Current stock level of the filament (e.g., in grams)."
        },
        "costPerKg": {
          "type": "number",
          "description": "Cost per kilogram of the filament."
        }
      },
      "required": [
        "name",
        "stockLevel",
        "costPerKg"
      ]
    },
    "Accessory": {
      "title": "Accessory",
      "type": "object",
      "description": "Represents an accessory that can be added to a print job, like lamps or cables.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the accessory."
        },
        "stockLevel": {
          "type": "number",
          "description": "Current stock level of the accessory."
        },
        "cost": {
          "type": "number",
          "description": "Cost of a single unit of the accessory."
        }
      },
      "required": [
        "name",
        "stockLevel",
        "cost"
      ]
    },
    "Quote": {
      "title": "Quote",
      "type": "object",
      "description": "Represents a quote for a 3D printing job.",
      "properties": {
        "clientId": {
          "type": "string",
          "description": "Reference to Client."
        },
        "date": {
          "type": "string",
          "description": "Date the quote was created.",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "Description of the print job."
        },
        "materials": {
          "type": "array",
          "description": "List of filaments used in the job.",
          "items": {
            "type": "object",
            "properties": {
              "filamentId": {
                "type": "string"
              },
              "grams": {
                "type": "number"
              }
            },
            "required": [
              "filamentId",
              "grams"
            ]
          }
        },
        "accessories": {
          "type": "array",
          "description": "List of accessories used in the job.",
          "items": {
            "type": "object",
            "properties": {
              "accessoryId": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              }
            },
            "required": [
              "accessoryId",
              "quantity"
            ]
          }
        },
        "printingTimeHours": {
          "type": "number",
          "description": "Estimated printing time in hours."
        },
        "price": {
          "type": "number",
          "description": "Total price of the quote."
        },
        "status": {
          "type": "string",
          "description": "The status of the quote.",
          "enum": [
            "Pendiente",
            "Imprimiendo",
            "Entregado"
          ]
        },
        "materialCost": {
          "type": "number",
          "description": "Total cost of all materials (filaments) for the job."
        },
        "accessoryCost": {
          "type": "number",
          "description": "Total cost of all accessories for the job."
        },
        "machineCost": {
          "type": "number",
          "description": "Cost of machine usage for the job."
        },
        "electricityCost": {
          "type": "number",
          "description": "Cost of electricity for the job."
        }
      },
      "required": [
        "clientId",
        "date",
        "printingTimeHours",
        "price",
        "status",
        "materialCost",
        "accessoryCost",
        "machineCost",
        "electricityCost"
      ]
    },
    "Setting": {
      "title": "Setting",
      "type": "object",
      "description": "Represents a configuration setting for the application.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the setting (e.g., electricityCost, machineUsageCost, profitMargin, currency)."
        },
        "value": {
          "type": "string",
          "description": "Value of the setting. Stored as a string to accommodate different data types."
        }
      },
      "required": [
        "name",
        "value"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/clients/{clientId}": {
      "schema": {
        "$ref": "#/entities/Client"
      },
      "description": "Stores client information. `clientId` is the document ID."
    },
    "/expenses/{expenseId}": {
      "schema": {
        "$ref": "#/entities/Expense"
      },
      "description": "Stores expense records. `expenseId` is the document ID."
    },
    "/filaments/{filamentId}": {
      "schema": {
        "$ref": "#/entities/Filament"
      },
      "description": "Stores filament inventory information. `filamentId` is the document ID."
    },
    "/accessories/{accessoryId}": {
      "schema": {
        "$ref": "#/entities/Accessory"
      },
      "description": "Stores accessory inventory information. `accessoryId` is the document ID."
    },
    "/quotes/{quoteId}": {
      "schema": {
        "$ref": "#/entities/Quote"
      },
      "description": "Stores quotes for 3D printing jobs. `quoteId` is the document ID."
    },
    "/settings/{settingId}": {
      "schema": {
        "$ref": "#/entities/Setting"
      },
      "description": "Stores application settings. `settingId` is the document ID."
    }
  }
}
